<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" prefHeight="527.0" prefWidth="490.0" spacing="20.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.practica1.HelloController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
   <children>
      <Label prefHeight="35.0" prefWidth="474.0" text="Ordenacion con 4 algoritmos distintos." textAlignment="CENTER">
         <font>
            <Font size="24.0" />
         </font>
      </Label>
      <VBox alignment="CENTER" prefHeight="460.0" prefWidth="450.0" spacing="20.0">
         <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
         </padding>
         <children>
            <HBox prefHeight="0.0" prefWidth="410.0">
               <children>
                  <Label text="Cantidad de personas:">
                     <opaqueInsets>
                        <Insets right="10.0" />
                     </opaqueInsets>
                  </Label>
                  <TextField fx:id="cuantos" prefHeight="26.0" prefWidth="93.0">
                     <opaqueInsets>
                        <Insets left="19.0" right="10.0" />
                     </opaqueInsets>
                     <HBox.margin>
                        <Insets left="10.0" />
                     </HBox.margin>
                  </TextField>
               </children>
            </HBox>
            <HBox prefHeight="32.0" prefWidth="410.0">
               <children>
                  <Label prefHeight="18.0" prefWidth="118.0" text="Ordenar por..." />
                  <Pane prefHeight="6.0" prefWidth="185.0" />
                  <Label prefHeight="18.0" prefWidth="118.0" text="Orden" />
               </children>
            </HBox>
            <GridPane alignment="TOP_CENTER">
               <columnConstraints>
                  <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                  <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                  <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
               </columnConstraints>
               <rowConstraints>
                  <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                  <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                  <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
               </rowConstraints>
               <children>
                  <RadioButton fx:id="nombreButton" mnemonicParsing="false" text="Nombre" />
                  <RadioButton fx:id="edadButton" mnemonicParsing="false" text="Edad" GridPane.rowIndex="1" />
                  <RadioButton fx:id="alturaButton" mnemonicParsing="false" text="Altura" GridPane.rowIndex="2" />
                  <RadioButton fx:id="pesoButton" mnemonicParsing="false" text="Peso" GridPane.columnIndex="1" />
                  <RadioButton fx:id="imcButton" mnemonicParsing="false" text="imc" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                  <RadioButton fx:id="descButton" mnemonicParsing="false" text="Ascendente" GridPane.columnIndex="2" />
                  <RadioButton fx:id="ascButton" mnemonicParsing="false" text="Descendente" GridPane.columnIndex="2" GridPane.rowIndex="1" />
               </children>
            </GridPane>
            <TableView fx:id="table" prefHeight="197.0" prefWidth="410.0">
              <columns>
                <TableColumn fx:id="nombreColumn" prefWidth="75.0" text="Nombre" />
                <TableColumn fx:id="edadColumn" prefWidth="75.0" text="Edad" />
                  <TableColumn fx:id="alturaColumn" prefWidth="75.0" text="Altura" />
                  <TableColumn fx:id="pesoColumn" prefWidth="75.0" text="Peso" />
                  <TableColumn fx:id="imcColumn" prefWidth="75.0" text="imc" />
              </columns>
            </TableView>
         </children>
      </VBox>
      <HBox prefHeight="89.0" prefWidth="450.0">
         <children>
            <Pane prefHeight="28.0" prefWidth="227.0" />
            <Button mnemonicParsing="false" onAction="#generarPersona" text="Llenar">
               <opaqueInsets>
                  <Insets />
               </opaqueInsets>
               <HBox.margin>
                  <Insets left="10.0" right="10.0" />
               </HBox.margin></Button>
            <Button mnemonicParsing="false" onAction="#ordenar" text="Ordenar">
               <HBox.margin>
                  <Insets right="10.0" />
               </HBox.margin></Button>
            <Button mnemonicParsing="false" onAction="#exitApp" text="Salir" />
         </children>
      </HBox>
   </children>
</VBox>
